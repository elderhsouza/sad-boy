{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"isolatedModules": true,
		"module": "Preserve",
		"moduleDetection": "force",
		"noEmit": true,
		"noImplicitOverride": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"verbatimModuleSyntax": true,
	},
	"include": [
		"src",
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}